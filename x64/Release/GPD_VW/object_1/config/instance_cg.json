{
  //Visualization
  "show_result": true,
  "show_keypoints": true,
  "show_correspondences": false,
  "show_rotated_model": false,
  //Recognition
  "sample_3d": 0.0,
  "key_points": "uniform", // harris | uniform
  "model_ss": 0.001,
  "scene_ss": 0.001,
  "use_hough": false,
  "rf_rad": 0.004 ,
  "descr_rad": 0.004,
  "cg_size": 0.004,
  "cg_thresh": 60,
  //ICP
  "use_icp": true,
  "icp_max_iter": 20,
  "icp_corr_distance": 0.02,
  //Hypothesis Verification
  "use_hv": true,
  "hv_resolution": 0.005,
  "hv_occupancy_grid_resolution": 0.01,
  "hv_clutter_reg": 5.0,
  "hv_inlier_th": 0.005,
  "hv_occlusion_th": 0.01,
  "hv_rad_clutter": 0.03,
  "hv_regularizer": 3.0,
  "hv_rad_normals": 0.05,
  "hv_detect_clutter": false
}

//--algorithm (Hough|GC):      Clustering algorithm used
//--model_ss val:              Model uniform sampling radius
//--scene_ss val:              Scene uniform sampling radius
//--rf_rad val:                Reference frame radius
//--descr_rad val:             Descriptor radius
//--cg_size val:               Cluster size
//--cg_thresh val:             Clustering threshold

//--icp_max_iter val:          ICP max iterations number
//--icp_corr_distance val:     ICP correspondence distance

//--hv_clutter_reg val:        Clutter Regularizer
//--hv_inlier_th val:          Inlier threshold
//--hv_occlusion_th val:       Occlusion threshold
//--hv_rad_clutter val:        Clutter radius
//--hv_regularizer val:        Regularizer value
//--hv_rad_normals val:        Normals radius
//--hv_detect_clutter val:     TRUE if clutter detect enabled



